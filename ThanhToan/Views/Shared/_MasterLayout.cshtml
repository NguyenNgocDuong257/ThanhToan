﻿
<style>
    header {
        display: flex;
        text-align: center;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid gray;
    }

    .logo {
        display: flex;
        text-align: center;
        align-items: center;
        padding: 10px;
    }

        .logo img {
            height: 50px;
            width: auto;
            margin-right: 10px;
        }

        .logo h2 {
            font-size: 30px;
            color: dodgerblue;
        }

    .contact {
        display: flex;
        text-align: center;
        align-items: center;
        padding: 10px;
    }

        .contact img {
            height: 50px;
            width: auto;
            margin-right: 10px;
        }

        .contact pre {
            font-size: 20px;
            color: grey;
        }

            .contact pre b {
                font-size: 20px;
                color: dodgerblue;
            }
</style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/Content/img/logo.png" />
            <h2> | Thanh Toán</h2>
        </div>
        <div class="contact">
            <img src="~/Content/img/phone.png" />
            <pre><b>1900-6035</b>
8h-21h, cả T7 & CN</pre>
        </div>

    </header>
    <div>
        @RenderBody()
    </div>

</body>
</html>